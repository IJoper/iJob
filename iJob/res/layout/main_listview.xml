<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#00fff0" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/contact_search_box_background" >

            <EditText
                android:id="@+id/main_editText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_toLeftOf="@+id/main_serach"
                android:background="@drawable/contact_search_box_edittext_keyword_background"
                android:drawableLeft="@drawable/magnifying_glass"
                android:drawablePadding="8.0dip"
                android:ellipsize="none"
                android:hint="@string/search_hint"
                android:paddingBottom="8.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="30.0dip"
                android:paddingTop="8.0dip"
                android:singleLine="true"
                android:textColor="#ff000000"
                android:textColorHint="#ffcccccc"
                android:textSize="15.0sp" />

            <Button
                android:id="@+id/main_more"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/main_editText"
                android:background="@drawable/search_box_cancel_btn_bg"
                android:gravity="center"
                android:shadowColor="#8fffffff"
                android:shadowDy="2.0"
                android:shadowRadius="2.0"
                android:text="+"
                android:textColor="#ff777777"
                android:textSize="15.0sp" />

            <Button
                android:id="@+id/main_serach"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:layout_alignTop="@+id/main_editText"
                android:layout_toLeftOf="@+id/main_more"
                android:background="@drawable/search_box_cancel_btn_bg"
                android:shadowColor="#8fffffff"
                android:shadowDy="2.0"
                android:shadowRadius="2.0"
                android:text="S"
                android:textColor="#ff777777"
                android:textSize="15.0sp" />
            
        </RelativeLayout>
        
    </LinearLayout>

    <com.ijob.listview.XListView
        android:id="@+id/main_xListView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:listSelector="#007fff" >
    </com.ijob.listview.XListView>

</LinearLayout>